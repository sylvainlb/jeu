<h1>Listing zones</h1>

<table>
  <tr>
    <th>Region</th>
    <th>Building type</th>
    <th>Coordx</th>
    <th>Coordy</th>
    <th>Stocks</th>
    <th></th>
    <th></th>
  </tr>

<% @zones.each do |zone| %>
  <tr>
    <td><%= zone.region.name %></td>
    <td><%= zone.building_type.name %></td>
    <td><%= zone.coordX %></td>
    <td><%= zone.coordY %></td>
    <td><%= zone.stocks %></td>
    <td><%= link_to 'Show', zone %></td>
    <td><%= link_to 'Edit', edit_zone_path(zone) %></td>
    <td><%= link_to 'Destroy', zone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

